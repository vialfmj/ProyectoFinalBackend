<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/pulse/bootstrap.min.css">
    <title>Document</title>
</head>

<body>
    <h1>Vista del administrador</h1>
    <div id="productsContainer" class="container">

    </div>
    <div class="container">
        <form id="adderForm" enctype="multipart/form-data">
            <div class="form-group">
                <label class="col-form-label mt-4" for="nombre">Nombre del producto:</label>
                <input type="text" class="form-control" placeholder="" name="nombre" id="nombre">
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="descripcion">Descripcion:</label>
                <input type="text" class="form-control" name="descripcion" placeholder="" id="descripcion">
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="codigo">Codigo:</label>
                <input type="text" class="form-control" name="codigo" placeholder="" id="codigo">
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="precio">Precio:</label>
                <input type="text" class="form-control" name="precio" placeholder="" id="precio">
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="categoria">Categoria:</label>
                <input type="text" class="form-control" name="categoria" placeholder="" id="categoria">
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="stock">Stock:</label>
                <input type="text" class="form-control" name="stock" placeholder="" id="stock">
            </div>

            <div class="form-group">
                <label for="Image" class="form-label mt-4">Default file input example</label>
                <input class="form-control" type="file" name="image" id="image">
              </div>
            <div class="container d-flex justify-content-center mt-4">
                <button class="btn btn-primary" type="submit">Enviar</button>
            </div>

        </form>
    </div>

    <script src="/js/admin.js"></script>
</body>

</html>