<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/pulse/bootstrap.min.css">
</head>
<body>
    <div class="container d-flex justify-content-center">
        <h1>Cart</h1>
    </div>
    <div class="container">


                <% if(cart.length > 0){ %>
                    <table class="table table-hover">
                        <thead>
                          <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Descripcion</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Cantidad</th>
                            <th scope="col"> </th>
                          </tr>
                        </thead>
                        <tbody>
                <% cart.forEach(function(product){ %>
                    <tr class="table-primary">
                        <th scope="row"><%= product.nombre %></th>
                        <td><%= product.descripcion %></td>
                        <td><%= product.precio %> </td>
                        <td><%= product.cantidad %></td>
                        <td>
                            <a href="/carrito/removeFromCart/?idCart=<%= idCart %>&idProd=<%= product.id %>">
                                <button class="btn btn-primary">X</button>
                            </a>
                        </td>
                      </tr>
                      <% }); %>
                    </tbody>
                </table>
                <div class="container">
                    <a href="/carrito/buy/?idCart=<%= idCart %>">
                        <button class="btn btn-primary">Iniciar Compra</button>
                    </a>
                </div>
                  <% } else{ %>  
                    <h2>El carrito esta vacio</h2>
                    <a href="/profile/me">
                        <button class="btn btn-primary">Volver</button>
                    </a>
                 <% } %>
    </div>
</body>
</html>